@model IEnumerable<PRA.DBQuizard.Answer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<h2>Answers</h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Answer1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RightAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question.Question1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.QuestionID == ViewBag.IDQuestion)
        {
            counter++;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer1)
                </td>
                <td>
                    @Html.RadioButtonFor(modelItem => item.RightAnswer, item.IDAnswer, new { id = item.IDAnswer })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Question1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDAnswer }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDAnswer }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDAnswer })
                </td>
            </tr>
        }
    }

    <tr>
        @if (counter < 4)
        {
            @Html.ActionLink("Create New", "Create")
        }
    </tr>

</table>

<div>
    @Html.ActionLink("Save", "Save", "Questions", new { id = Request.Cookies["quiz"]["ID"].ToString() }, null) | 
    @Html.ActionLink("Back to Questions", "Index", "Questions", new { id = Request.Cookies["quiz"]["ID"].ToString() }, null)
</div>
