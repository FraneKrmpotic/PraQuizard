@model PRA.ViewModels.UserIKvizovi
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quizard", "PrijavljeniKorisnik", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Napravi kviz", "Index", "Quiz")</li>
                    <li>@Html.ActionLink("Prodruži se kvizu", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>

@*<img class="img-circle" width:"100px;" height:"100px;" runat="server" style="border: 2px; "/>*@

<h1>Dobrodošli @Model.User.Username</h1>


<div class="form-group">
    
    <a href="https://localhost:44305/Quizs/Create" class="btn btn-primary" style="margin-top: 15px;">Kreiraj quiz</a>
    <a href="https://localhost:44305/Home/Index" class="btn btn-primary" style="margin-top: 15px;"> Odjava </a>
</div>

<table class="table-bordered table" style="margin-top:2%">
    <thead>
        <tr>
            <td>Naziv kviza</td>
            <td>Izbriši</td>
        </tr>
    </thead>
    <tbody>
       @foreach (var kviz in Model.Quizovi)
            {
                <tr>
                    <td>@Html.ActionLink(kviz.Title, "Edit", "Quiz", new { id = kviz.IDQuiz }, null)</td>
                    <td>@Html.ActionLink("Izbriši", "Delete", "Quiz", new { id = kviz.IDQuiz })</td>
                </tr>
            }
    </tbody>
</table>



